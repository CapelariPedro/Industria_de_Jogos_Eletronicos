<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.FuncionarioController">
    <VBox spacing="10">
        <Label text="Gestão de Funcionários" />
        <TextField fx:id="txtNome" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="182.0" promptText="Nome" />
        <TextField fx:id="txtCargo" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="178.0" promptText="Cargo" />
        <TextField fx:id="txtSalario" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="180.0" promptText="Salário" />
        <Button onAction="#adicionarFuncionario" text="Adicionar" />
        <TableView fx:id="tabelaFuncionarios">
            <columns>
                <TableColumn text="Nome" />
                <TableColumn text="Cargo" />
                <TableColumn text="Salário" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
